@using EventManager.Models
@model IEnumerable<Event>

@{
    ViewData["Title"] = "Events";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">Events</h1>
        <div class="text-muted">Browse upcoming events and register in seconds.</div>
    </div>

    <a class="btn btn-primary" asp-controller="Events" asp-action="Create">
        + Create Event
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No events yet. Create the first one from the <strong>Create Event</strong> button.
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var ev in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title mb-1">@ev.Title</h5>
                            <span class="badge bg-secondary">@ev.Category?.Name</span>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(ev.Description))
                        {
                            <p class="card-text text-muted mt-2">
                                @(ev.Description!.Length > 120 ? ev.Description.Substring(0, 120) + "..." : ev.Description)
                            </p>
                        }
                        else
                        {
                            <p class="card-text text-muted mt-2 fst-italic">No description provided.</p>
                        }

                        <ul class="list-unstyled small mb-0">
                            <li><strong>Start:</strong> @ev.StartDate.ToString("dd MMM yyyy, HH:mm")</li>
                            <li><strong>End:</strong> @ev.EndDate.ToString("dd MMM yyyy, HH:mm")</li>
                            <li><strong>Max participants:</strong> @ev.MaxParticipants</li>
                        </ul>
                    </div>

                    <div class="card-footer bg-white border-0 pt-0">
                        <div class="d-flex gap-2">
                            <a class="btn btn-outline-primary w-100"
                               asp-controller="Events"
                               asp-action="Details"
                               asp-route-id="@ev.Id">
                                Details
                            </a>

                            <a class="btn btn-outline-success w-100"
                               asp-controller="Registrations"
                               asp-action="Create"
                               asp-route-eventId="@ev.Id">
                               asp-route-myProp="@ev.CategoryId">
                                Register
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
