@{
    ViewData["Title"] = "Author Details";
}

<h1 class="mb-1">Model.Name</h1>
<p class="text-muted">Country:(Model.Country ?? "-")</p>

<hr />

<h4 class="mb-3">Books by this author</h4>

@if (!Model.Books.Any())
{
    <p class="text-muted">No books yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th style="width: 120px;">Year</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.Books.OrderBy(b => b.Title))
            {
                <tr>
                    <td>Title</td>
                    <td>Year</td>
                </tr>
            }
        </tbody>
    </table>
}
